<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Clubname</th>
      <th>Description</th>
      <th>County</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each sportground.clubs}}
      <tr>
        <td>
          {{clubname}}
        </td>
        <td>
          {{description}}
        </td>
        <td>
          {{county}}
        </td>
        <td>
          {{latitude}}
        </td>
        <td>
          {{longitude}}
        </td>
        <td>
          <a href="/sportground/{{../sportground._id}}/deleteclub/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
